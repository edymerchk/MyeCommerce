<% product = item.product %>
<tr>
	<td class="cart-details">					
		<span class="cart-image"><%=image_tag(product.picture, :size => "100x100")  %></span>		
		<h3><%= link_to product.name, product_path(product) %></h3>	 				
	</td>
	<td class="cart-price"><%=number_to_currency(product.sale_price )%></td>
	<td class="cart-price">
		<%=item.qty%>
	</td>
	<td class="total"><%=number_to_currency(item.total_price)%></td>
	<td class="total"><%=link_to "Delete Item", item_path(id: item.id), method: :delete, data: { confirm: 'Are you sure?' }%></td>
</tr>
	