<h1>Listing categories</h1>

<table class="table table-condensed table-bordered table-striped">
  <tr>
    <th>Name</th>
    <th>Color</th>
    <th>Show</th>
    <th></th>
    
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= category.color %></td>
    <td><%= link_to 'Show', admin_category_path(category) %></td>
    <td><%= link_to 'Edit', edit_admin_category_path(category), :class =>"btn btn-mini" %>
        <%= link_to 'Destroy', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, :class =>"btn btn-mini btn-danger" %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Category', new_admin_category_path, :class => 'btn btn-primary' %>
