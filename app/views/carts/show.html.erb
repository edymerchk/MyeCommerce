<div id="content">
		<!---Begin Page Specific Content-->
	<h2>My Cart</h2>
	<form id="cartform">

		<table>
			<tbody><tr>
				<th>Description</th>
				<th>Price Each</th>
				<th>Quantity</th>
				<th>Total</th>
			</tr>

			<%@items.each do |item| %>		
			<% product = Product.find(item.product_id)%>
			<tr>
				<td class="cart-details">					
					<span class="cart-image"><%=image_tag(product.picture, :size => "100x100")  %></span>
					<h3><%=product.name%></h3>					
				</td>
				<td class="cart-price"><%=number_to_currency(product.sale_price )%></td>
				<td class="cart-price">
					<%=item.qty%>
				</td>
				<td class="total"><%=number_to_currency(item.total_price)%></td>
			</tr>
			<%end %>			
			</tbody>
		</table>

		<div id="checkout">
				<h3>Total: <span><%=number_to_currency(@cart.cart_price)%></span><span class="checkout-meta">excluding tax &amp; shipping</span></h3>
				<p class="act">
					<input type="button" class="cta" value="Proceed to Checkout">
				</p>			
		</div>

	</form>		
		
		<!---End Page Specific Content-->
</div>