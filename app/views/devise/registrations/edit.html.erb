<h2>Edit My Account</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="clearfix large_form"> 
      <%= f.input :email, :required => true, :autofocus => true, :input_html => {:class => 'large'}  %>
    </div>
    <div class="clearfix large_form">
      <%= f.input :first_name, :input_html => {:class => 'large'}  %>
    </div>
    <div class="clearfix large_form">
      <%= f.input :last_name, :input_html => {:class => 'large'}  %>
    </div>
    <div class="clearfix large_form">
      <%= f.input :birthday, :as => :string, :input_html => {:class => 'large'}  %>
    </div>
    <div class="clearfix large_form">
      <%= f.input :country, :input_html => {:class => 'large'}  %>
    </div>
    <div class="clearfix large_form">
      <%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false, :input_html => {:class => 'large'}  %>
    </div>
    <div class="clearfix large_form">
      <%= f.input :password_confirmation, :required => false, :input_html => {:class => 'large'}  %>
    </div>
    <div class="clearfix large_form">
      <%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true, :input_html => {:class => 'large'}  %>
    </div>
     <div class="clearfix large_form"> 
          <%= f.input :avatar, :as => :file, :label => "Avatar"%>
        </div>    
  </div>
  <div class="action_bottom">
    <%= f.button :submit, "Update" %>
    <br>
    <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>
  <%= link_to "Back", :back %>

  </div>
<% end %>




